<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">
    <changeSet id="20250427_delayed_task_table" author="danil.markov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="delayed_task" />
            </not>
        </preConditions>
        <createTable tableName="delayed_task">
            <column name="id" type="bigint" autoIncrement="true" remarks="Идентификатор">
                <constraints primaryKey="true" />
            </column>
            <column name="status" type="tinyint" remarks="Статус задания">
                <constraints nullable="false" />
            </column>
            <column name="type" type="tinyint" remarks="Тип задания">
                <constraints nullable="false" />
            </column>
            <column name="payload" type="jsonb" remarks="Данные для задания">
                <constraints nullable="false" />
            </column>
            <column name="created_at" type="timestamptz" remarks="Дата создания">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20250427_product_last_price_column" author="danil.markov">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="product" columnName="last_price" />
            </not>
        </preConditions>
        <addColumn tableName="product">
            <column name="last_price" type="numeric(10,2)" remarks="Актуальная цена" />
        </addColumn>
    </changeSet>
    
    <changeSet id="20250427_product_ts_vector" author="danil.markov">
        <preConditions onFail="CONTINUE">
            <not>
                <tableExists tableName="product_ts_vector" />
            </not>
        </preConditions>
        <createTable tableName="product_ts_vector">
            <column name="url" type="varchar">
                <constraints primaryKey="true" />
            </column>
            <column name="product_name" type="tsvector" />
        </createTable>
        <sql>
            create index if not exists product_name_gin_idx on product_ts_vector using GIN (product_name);
        </sql>
        <sql>
            CREATE OR REPLACE FUNCTION update_product_ts_vector()
            RETURNS TRIGGER AS '
            BEGIN
                INSERT INTO product_ts_vector (url, product_name)
                VALUES (
                    NEW.url,
                    to_tsvector(NEW.product_name)
                )
                ON CONFLICT (url) DO UPDATE
                SET product_name = EXCLUDED.product_name;

                RETURN NEW;
            END;
            ' LANGUAGE plpgsql;

            CREATE TRIGGER trg_update_product_ts_vector
            AFTER INSERT OR UPDATE ON product
            FOR EACH ROW
            EXECUTE FUNCTION update_product_ts_vector();
        </sql>
    </changeSet>

    <changeSet id="20250427_product_attribute_product_url_idx" author="danil.markov">
        <preConditions onFail="CONTINUE">
            <not>
                <indexExists tableName="product_attribute" indexName="product_attribute_product_url_idx" />
            </not>
        </preConditions>
        <createIndex tableName="product_attribute" indexName="product_attribute_product_url_idx">
            <column name="product_url" />
        </createIndex>
    </changeSet>

    <changeSet id="20250427_price_history_product_url_idx" author="danil.markov">
        <preConditions onFail="CONTINUE">
            <not>
                <indexExists tableName="price_history" indexName="price_history_product_url_idx" />
            </not>
        </preConditions>
        <createIndex tableName="price_history" indexName="price_history_product_url_idx">
            <column name="product_url" />
        </createIndex>
    </changeSet>

    <changeSet id="20250427_product_last_price_idx" author="danil.markov">
        <preConditions onFail="CONTINUE">
            <not>
                <indexExists tableName="product" indexName="product_last_price_idx" />
            </not>
        </preConditions>
        <createIndex tableName="product" indexName="product_last_price_idx">
            <column name="last_price" />
        </createIndex>
    </changeSet>

    <changeSet id="20250427_product_attribute_filters_idx" author="danil.markov">
        <preConditions onFail="CONTINUE">
            <not>
                <indexExists tableName="product_attribute" indexName="product_attribute_filters_idx" />
            </not>
        </preConditions>
        <createIndex tableName="product_attribute" indexName="product_attribute_filters_idx">
            <column name="attribute_id" />
            <column name="value" />
            <column name="unit" />
        </createIndex>
    </changeSet>
</databaseChangeLog>