<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">
    <changeSet id="20250413_add_product_ts_vector_table" author="danil.markov">
        <createTable tableName="product_ts_vector">
            <column name="url" type="varchar">
                <constraints primaryKey="true" />
            </column>
            <column name="product_name" type="tsvector">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
    <changeSet id="20250413_add_gin_index" author="danil.markov">
        <sql>create index product_name_gin_idx on product_ts_vector using gin(product_name)</sql>
    </changeSet>
</databaseChangeLog>